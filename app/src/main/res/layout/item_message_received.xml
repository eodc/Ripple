<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/date_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:visibility="gone" />
    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240sp"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/date_divider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:background="@drawable/received_message_background"
        android:textColor="@android:color/primary_text_dark"
        tools:text="Hello, World!"/>
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/message_text"
        android:layout_alignBottom="@id/message_text"
        android:layout_marginStart="2dp"
        android:textSize="12sp"
        android:textColor="@android:color/secondary_text_light"
        android:visibility="gone"
        android:layout_gravity="end"
        tools:text="15 Dec"/>
</RelativeLayout>