<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:gravity="bottom"
    app:umanoFadeColor="@android:color/transparent"
    app:umanoDragView="@id/new_message_container"
    tools:context="io.eodc.ripple.Activities.ConversationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <android.support.v7.widget.Toolbar
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            android:theme="@style/Base.Theme.AppCompat"
            tools:targetApi="lollipop" />

        <fragment
            android:id="@+id/msg_history"
            android:name="io.eodc.ripple.Fragments.ConversationFragment"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_conversation" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sliding_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center|top"
        android:background="@android:color/white">
        <RelativeLayout
            android:id="@+id/new_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/attach_icon"
                android:layout_width="@dimen/attach_icon_size"
                android:layout_height="@dimen/attach_icon_size"
                android:layout_marginStart="@dimen/attach_icon_horizontal_margin"
                android:layout_marginTop="@dimen/msg_container_element_vertical_padding"
                android:padding="@dimen/attach_icon_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/ic_attach_content_description"
                app:srcCompat="@drawable/ic_attach_action" />

            <EditText
                android:id="@+id/message_composer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attach_icon"
                android:layout_toStartOf="@id/send_button"
                android:layout_marginTop="@dimen/msg_container_element_vertical_padding"
                android:focusable="true"
                android:hint="@string/msg_composer_hint"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textShortMessage|textCapSentences|textMultiLine"
                android:maxLines="5" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/send_button"
                android:layout_width="@dimen/send_button_size"
                android:layout_height="@dimen/send_button_size"
                android:layout_marginStart="@dimen/send_button_horizontal_margin"
                android:layout_marginEnd="@dimen/send_button_horizontal_margin"
                android:layout_marginTop="@dimen/send_button_vertical_margin"
                android:layout_marginBottom="@dimen/send_button_vertical_margin"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:onClick="sendMessage"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_action_send" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/attach_drawer_divider_height"
            android:layout_marginStart="@dimen/attach_drawer_divider_horizontal_margin"
            android:layout_marginEnd="@dimen/attach_drawer_divider_horizontal_margin"
            android:layout_marginTop="@dimen/attach_drawer_divider_vertical_margin"
            android:layout_marginBottom="@dimen/attach_drawer_divider_vertical_margin"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/new_message_container"
            android:contentDescription="@string/attach_drawer_divider_content_description"/>
    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
