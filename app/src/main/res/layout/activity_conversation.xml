<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:gravity="bottom"
    app:umanoFadeColor="@android:color/transparent"
    app:umanoDragView="@id/new_message_container"
    app:umanoPanelHeight="@dimen/attach_drawer_panel_default_height"
    tools:context="io.eodc.ripple.Activities.ConversationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.Toolbar
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            android:theme="@style/Base.Theme.AppCompat"
            tools:targetApi="lollipop" />

        <fragment
            android:id="@+id/msg_history"
            android:name="io.eodc.ripple.Fragments.ConversationFragment"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_conversation" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sliding_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center|top"
        android:background="@android:color/white">

        <include
            android:id="@+id/message_composer_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/attach_drawer_panel_default_height"
            android:layout_marginStart="@dimen/message_composer_horizontal_margin"
            android:layout_marginEnd="@dimen/message_composer_horizontal_margin"
            layout="@layout/activity_conversation_composer_drawer" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/attach_drawer_divider_height"
            android:layout_marginStart="@dimen/attach_drawer_divider_horizontal_margin"
            android:layout_marginEnd="@dimen/attach_drawer_divider_horizontal_margin"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/message_composer_container"
            android:contentDescription="@string/attach_drawer_divider_content_description"
            android:id="@+id/imageView" />

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
