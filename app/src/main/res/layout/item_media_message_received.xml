<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/date_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_message_divider_margin"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:visibility="gone"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_divider"
        android:layout_marginBottom="@dimen/item_message_content_vertical_margin"
        android:layout_marginStart="@dimen/item_message_content_horizontal_margin"
        tools:ignore="ContentDescription"
        tools:layout_height="200dp"
        tools:layout_width="150dp" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/media"
        android:layout_alignBottom="@id/media"
        android:layout_marginStart="@dimen/item_message_timestamp_horizontal_margin"
        android:textSize="@dimen/item_message_timestamp_text_size"
        android:textColor="@android:color/secondary_text_light"
        android:visibility="gone"
        android:layout_gravity="end"
        tools:visibility="gone"
        tools:text="15 Dec"/>
</RelativeLayout>